<p id="notice"></p>

<div class="center">
  <div class="info">
    <p>
      <strong>Name: </strong><%= @attraction.name %>
    </p>
    <p>
      <strong>Total Number of Users: </strong><%= @attraction.users.count %>
    </p>
    <p>
      <strong>Ticket Requirement: </strong><%= @attraction.tickets %>
    <p>
      <strong>Height Requirement: </strong><%= @attraction.min_height %> inches
    </p>
    <p>
      <strong>Nausea Rating: </strong><%= @attraction.nausea_rating %>
    </p>
    <p>
      <strong>Happiness Rating: </strong><%= @attraction.happiness_rating %>
    <p>
    <% if !@user.admin %>
      <p>
        <a href='/take_ride/<%= @attraction.id %>'><button type="button" class="btn btn-primary">Go on this ride</button></a>
      </p>
    <% end %>
    <br>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  </div>
</div>